# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/proofreading_db
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/proofreading_test_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
DEBUG=true

# AI Model Configuration
MODEL_PATH=/app/models
HUGGINGFACE_CACHE_DIR=/app/cache
TORCH_DEVICE=cpu

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME="Japanese Proofreading System"
VERSION=0.1.0

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# External Services (if needed)
OPENAI_API_KEY=your-openai-api-key
AZURE_COGNITIVE_SERVICES_KEY=your-azure-key